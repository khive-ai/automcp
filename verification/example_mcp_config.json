{
  "mcpServers": {
    "data-processor": {
      "command": "uv",
      "args": [
        "run",
        "python",
        "-m",
        "automcp.cli",
        "run",
        "verification/config/data_processor_group.json",
        "--mode",
        "stdio"
      ],
      "alwaysAllow": [
        "data-processor.process_data",
        "data-processor.generate_report",
        "data-processor.validate_schema"
      ],
      "autoApprove": [
        "data-processor.process_data",
        "data-processor.generate_report",
        "data-processor.validate_schema"
      ]
    }
  }
}
